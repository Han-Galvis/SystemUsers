
@model IEnumerable<UsersViewModel>

<div class="card text-primary">

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <br />
                    <div class="panel-heading">
                        <button type="button" class="btn btn-primary create-user">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
                            </svg>
                        </button>

                    </div>
                    <br />
                    <div class="panel-body">
                        <table class="table" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fullname)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fullname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>

                                        <td>
                                            <button type="button" class="btn btn-primary view-details" data-user-id="@item.Id">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-square" viewBox="0 0 16 16">
                                                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                                </svg>
                                            </button>

                                            <button type="button" class="btn btn-danger delete-user" data-user-id="@item.Id">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                                </svg>
                                            </button>

                                            <button type="button" class="btn btn-primary edit-user" data-user-id="@item.Id">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                                </svg>
                                            </button>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal detalle usuario -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" role="dialog" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userDetailsModalLabel">Detalle</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" id="userDetailsModalClose"></button>
            </div>
            <div class="modal-body" id="userDetailsModalBody">
            </div>
        </div>
    </div>
</div>



<!-- Modal para editar usuario -->
<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserModalLabel">Editar</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" id="editUserModalClose"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editUserId" name="id">
                    <div class="form-group">
                        <label for="editFullName">Full Name</label>
                        <input type="text" class="form-control" id="editFullName" name="fullName" required>
                    </div>
                    <div class="form-group">
                        <label for="editEmail">Email address</label>
                        <input type="email" class="form-control" id="editEmail" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="editPassword">Password</label>
                        <input type="text" class="form-control" id="editPassword" name="password" required>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal para crear usuario -->
<div class="modal fade" id="CreateUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CreateUserModalLabel">Crear</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" id="CreateUserModalClose"></button>
            </div>
            <div class="modal-body">
                <form id="CreateForm">
                    <input type="hidden" id="CUserId" name="id">
                    <div class="form-group">
                        <label for="CFullName">Full Name</label>
                        <input type="text" class="form-control" id="CFullName" name="fullName" required>
                    </div>
                    <div class="form-group">
                        <label for="CEmail">Email address</label>
                        <input type="email" class="form-control" id="CEmail" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="CPassword">Password</label>
                        <input type="text" class="form-control" id="CPassword" name="password" required>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Crear</button>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            //create user
            $('.create-user').on('click', function () {
                $('#CreateUserModal').modal('show');
            });

            //detele user by id
            $('.delete-user').on('click', function () {
                var button = $(this);
                var userId = button.data('user-id');

                Swal.fire({
                    title: 'Esta seguro que quiere eliminarlo?',
                    icon: 'warning',
                    showCancelButton: true,
                    cancelButtonText: 'Cancelar',
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Si'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Users/Delete/' + userId,
                            type: 'DELETE',
                            success: function () {
                                Swal.fire(
                                    'Eliminado',
                                    'Registro Eliminado.',
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'Error al Eliminar.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });

            //details user
            $('.view-details').on('click', function () {
                var userId = $(this).data('user-id');

                $.ajax({
                    url: '/Users/Details/' + userId,
                    type: 'GET',
                    success: function (data) {
                        $('#userDetailsModalBody').html(`
                              <p><strong>Full Name:</strong> ${data.fullname}</p>
                              <p><strong>Email:</strong> ${data.email}</p>
                              <p><strong>Password:</strong> ${data.password}</p>
                              <p><strong>Created:</strong> ${new Date(data.created).toLocaleString()}</p>
                              <p><strong>Last Update:</strong> ${new Date(data.lastUpdate).toLocaleString()}</p>
                                `);
                        $('#userDetailsModal').modal('show');
                    },
                    error: function () {
                        alert('Error.');
                    }
                });
            });

            //edit user
            $('.edit-user').on('click', function () {
                var userId = $(this).data('user-id');

                $.ajax({
                    url: '/Users/Details/' + userId,
                    type: 'GET',
                    success: function (data) {
                        $('#editUserId').val(data.id);
                        $('#editFullName').val(data.fullname);
                        $('#editEmail').val(data.email);
                        $('#editPassword').val(data.password);
                        $('#editUserModal').modal('show');
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'Error al consultar el detalle.',
                            'error'
                        );
                    }
                });
            });

            // Manejar el envío del formulario de edición
            $('#editForm').submit(function (event) {
                event.preventDefault();

                var formData = {
                    id: $('#editUserId').val(),
                    fullName: $('#editFullName').val(),
                    email: $('#editEmail').val(),
                    password: $('#editPassword').val()
                };

                $.ajax({
                    url: '/Users/Edit/' + formData.id,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (data) {
                        Swal.fire({
                            title: 'Usuario Actualizado!',
                            icon: 'success',
                            showCancelButton: false,
                            confirmButtonText: 'Cerrar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.reload(); 
                            }
                        });
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'Error al actualizar.',
                            'error'
                        );
                    }
                });
            });

            // Creacion
            $('#CreateForm').submit(function (event) {
                event.preventDefault();

                var formData = {
                    id: 0,
                    FullName: $('#CFullName').val(),
                    Email: $('#CEmail').val(),
                    Password: $('#CPassword').val(),
                    Created: new Date().toISOString(),
                    LastUpdate: new Date().toISOString()
                };

                $.ajax({
                    url: '/Users/Create',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (data) {
                        Swal.fire({
                            title: 'Usuario Creado!',
                            html: `
                                        
                                            `,
                            icon: 'success',
                            showCancelButton: false,
                            confirmButtonText: 'Cerrar'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.reload(); 
                            }
                        });
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'Error al Crear.',
                            'error'
                        );
                    }
                });
            });

            $('#userDetailsModalClose').click(function () {
                $('#userDetailsModal').modal('hide');
            });

            $('#editUserModalClose').click(function () {
                $('#editUserModal').modal('hide');
            });

            $('#CreateUserModalClose').click(function () {
                $('#CreateUserModal').modal('hide');
            });

            
        });
    </script>
}

